@model IEnumerable<Arthesanatus.Models.Revista>

@{
    ViewBag.Title = "Listagem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem</h2>
<h4>Revistas</h4>
<br />
<p>
    @Html.ActionLink("Cadastrar Novo Registro","Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumeroEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnoEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MesEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th style="width: 21%">

        </th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MesEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Foto)
            </td>
            <td class="text-right">
                @Html.ActionLink("Editar","Edit",new { id = item.RevistaID },new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalhes","Details",new { id = item.RevistaID },new { @class = "btn btn-warning" })
                @Html.ActionLink("Excluir","Delete",new { id = item.RevistaID },new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
