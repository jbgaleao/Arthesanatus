@model IEnumerable<Arthesanatus.Models.Revista>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem - Revista</h2>

<p>
    @Html.ActionLink("Novo Registro","Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumeroEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AnoEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MesEdicao)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Foto)
        </th>
        <th></th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AnoEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MesEdicao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tema)
            </td>
            <td>
                <img src="~/Content/img/index-bolsa.jpg" alt="Image" style="width:100px;height:150px;max-width: 100%; height: auto;" />
            </td>
            <td style="text-align:right">
                @Html.ActionLink("Ver as Receitas","RevistasReceitasVM",new { codRevista = item.RevistaID,temaRevista = item.Tema }) |
                @Html.ActionLink("Editar","Edit",new { id = item.RevistaID }) |
                @Html.ActionLink("Details","Details",new { id = item.RevistaID }) |
                @Html.ActionLink("Delete","Delete",new { id = item.RevistaID })
            </td>
        </tr>
    }

</table>
