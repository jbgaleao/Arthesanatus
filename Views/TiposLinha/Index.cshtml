@model IEnumerable<Arthesanatus.Models.TipoLinha>

@{
    ViewBag.Title = "Listagem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem</h2>
<h4>Tipos de Linhas</h4>
<br />
<p>
    @Html.ActionLink("Cadastrar Novo Registro","Create")

</p>

<table class="table">

    <tr>
        <th style="width: 15%;">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th style="width: 32%;">
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th style="width: 32%">
            @Html.DisplayNameFor(model => model.DadosTecnicos)
        </th>
        <th style="width: 21%" class="text-right">
            @Html.Label("Ações")
        </th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td style="min-height:fit-content()">
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DadosTecnicos)
            </td>
            <td class="text-right">
                @Html.ActionLink("Editar","Edit",new { id = item.TipoLinhaID },new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalhes","Details",new { id = item.TipoLinhaID },new { @class = "btn btn-warning" })
                @Html.ActionLink("Excluir","Delete",new { id = item.TipoLinhaID },new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
