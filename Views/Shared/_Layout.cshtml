<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Amigurumis</title>
    @Styles.Render( "~/Content/css" )
    @Scripts.Render( "~/bundles/modernizr" )
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink( "Geana Arthesanatus", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" } )
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Listagens
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            @*<li>@Html.ActionLink( "Tipos de Linhas", "Index", "Tiposlinhas" )</li>
                            <li>@Html.ActionLink( "Fabricantes", "Index", "Fabricantes" )</li>*@
                            <li>@Html.ActionLink( "Receitas", "Index", "Receitas" )</li>
                            <li>@Html.ActionLink( "Revistas", "Index", "Revistas" )</li>
                        </ul>
                    </li>

                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Cadastros
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink( "Tipos de Linhas", "Create", "Tiposlinhas" )</li>
                            <li>@Html.ActionLink( "Fabricantes", "Create", "Fabricantes" )</li>
                            <li>@Html.ActionLink( "Receitas", "CadReceitas", "Cadastro" )</li>
                            <li>@Html.ActionLink( "Revistas", "Create", "Revistas" )</li>
                        </ul>
                    </li>

                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Inventário<span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink( "Entrada de Linhas", "EstEntrada", "Estoque" )</li>
                            <li>@Html.ActionLink( "Estoque de Linhas", "EstManutencao", "Estoque" )</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Consultas
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink( "Receitas", "ConReceitas", "Consultas" )</li>
                            <li>@Html.ActionLink( "Revistas", "ConReceitas", "Revistas" )</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Relatórios
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink( "Gastos Semanais", "RelGastosSemana", "Relatorio" )</li>
                            <li>@Html.ActionLink( "Gastos Mensais", "RelGastosMes", "Relatorio" )</li>
                            <li>@Html.ActionLink( "Gastos por Período", "RelGastosPeriodo", "Relatorio" )</li>
                        </ul>
                    </li>
                    <li>
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            Gráficos
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink( "Compras Semanais", "GrafComprasSemana", "Grafico" )</li>
                            <li>@Html.ActionLink( "Compras Mensais", "GrafComprasMes", "Grafico" )</li>
                            <li>@Html.ActionLink( "Compras por Período", "GrafComprasPeriodo", "Grafico" )</li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Arthes & Geana</p>
        </footer>
    </div>

    @Scripts.Render( "~/bundles/jquery" )
    @Scripts.Render( "~/bundles/bootstrap" )
    @RenderSection( "scripts", required: false )
</body>

</html>
