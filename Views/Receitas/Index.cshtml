@model IEnumerable<Arthesanatus.Models.Receita>

@{
    ViewBag.Title = "Listagem";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem</h2>
<h4>Receitas</h4>
<br />
<p>
    @Html.ActionLink("Cadastrar Novo Registro","Create")
</p>

<table class="table">
    <tr>
        <th style="width: 18%;">
            @Html.DisplayNameFor(model => model.Revista.Tema)
        </th>
        <th style="width: 18%;">
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th style="width: 43%;">
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th style="width: 21%;">

        </th>

    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Revista.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td class="text-right">
                @Html.ActionLink("Editar","Edit",new { id = item.ReceitaId },new { @class = "btn btn-primary" })
                @Html.ActionLink("Detalhes","Details",new { id = item.ReceitaId },new { @class = "btn btn-warning" })
                @Html.ActionLink("Excluir","Delete",new { id = item.ReceitaId },new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
