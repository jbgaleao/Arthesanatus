@model IEnumerable<Arthesanatus.Models.Receita>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Listagem - Receita</h2>

<p>
    @Html.ActionLink("Novo Registro","Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Revista.Tema)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Revista.Tema)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td style="text-align:right">
                @Html.ActionLink("Editar","Edit",new { id = item.ReceitaId }) |
                @Html.ActionLink("Details","Details",new { id = item.ReceitaId }) |
                @Html.ActionLink("Delete","Delete",new { id = item.ReceitaId })
            </td>
        </tr>
    }

</table>
