@model Arthesanatus.Models.Linha

@{
    ViewBag.Title = "Cadastro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Cadastro</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Linha</h4>
    <hr />
    @Html.ValidationSummary(true,"",new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.FabricanteID,"Fabricante",htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("FabricanteID",null,htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FabricanteID,"",new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TipoLinhaID,"Tipo da Linha",htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("TipoLinhaID",null,htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.TipoLinhaID,"",new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Retornar à Listagem", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
