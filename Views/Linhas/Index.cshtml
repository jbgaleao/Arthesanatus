@model IEnumerable<Arthesanatus.Models.Linha>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Registro", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Fabricante.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoLinha.Nome)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fabricante.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoLinha.Nome)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.LinhaID }) |
            @Html.ActionLink("Details", "Details", new { id=item.LinhaID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LinhaID })
        </td>
    </tr>
}

</table>
